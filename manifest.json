{
  "manifest_version": 2,
  "name": "Fontfully",
  "description": "Change the font of any website",
  "version": "1.0.0",
  "browser_action": {
    "default_title": "Change this page's font!",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["./build/content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "font_styles/arial.css",
    "font_styles/courier.css",
    "font_styles/cursive.css",
    "font_styles/monospace.css",
    "font_styles/open_sans.css"
  ]
}
